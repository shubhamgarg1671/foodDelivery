<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/rel_login"
    tools:context=".Activities.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_keyboard_backspace_black_24dp" />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/man_pc"
                    android:layout_margin="30dp"/>

                <com.paramhans.ecommercesingle.FontsUsed.RaleWayBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login/Register"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:layout_marginLeft="30dp"/>
                <EditText
                    android:id="@+id/et_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/et_bg_login"
                    android:textColorHint="@color/black"
                    android:hint="Mobile Number"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:inputType="numberSigned"
                    android:maxLength="10"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>
                <com.paramhans.ecommercesingle.FontsUsed.RalewayExtraLight
                    android:id="@+id/tv_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_red_dark"/>

                <com.paramhans.ecommercesingle.CustomViews.CustomButton
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/btn_disable_bg"
                    android:textSize="16sp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:text="Login / Register"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>



    </LinearLayout>
</RelativeLayout>