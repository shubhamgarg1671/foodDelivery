<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/lin_bg"
    android:elevation="4dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_promo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_launcher_logo"/>
                <com.paramhans.ecommercesingle.FontsUsed.RaleWayBold
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/plus_minus_box"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="SOCIAL"
                    android:padding="10dp"/>
            </LinearLayout>

            <com.paramhans.ecommercesingle.FontsUsed.RalewayExtraBold
                android:id="@+id/tv_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="APPLY"
                android:padding="6dp"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </RelativeLayout>

        <com.paramhans.ecommercesingle.FontsUsed.RalewaySemiBold
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            />
        <com.paramhans.ecommercesingle.FontsUsed.RalewayLight
            android:id="@+id/tv_max_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Note:"/>
    </LinearLayout>




</LinearLayout>